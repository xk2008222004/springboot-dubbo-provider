<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.dubbo.springbootdubbo.mapper.OrderProductMapper">

    <insert id="insertModel" parameterType="com.example.springbootdubbo.po.OrderProduct" useGeneratedKeys="true" keyProperty="id">
        insert into order_product(order_id,product_name,price,num,create_time,product_id) values(#{orderId},#{productName},#{price},#{num},#{createTime},#{productId})
    </insert>


    <delete id="deleteModel" parameterType="com.example.springbootdubbo.po.OrderProduct">
        delete from order_product where  id =#{id}
    </delete>

    <delete id="deleteByNo" parameterType="com.example.springbootdubbo.po.UserOrder">
        delete t.* from order_product t,user_order u
        where t.order_id=u.id and u.order_no=#{orderNo}
    </delete>


</mapper>